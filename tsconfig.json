{
	"extends": "./.svelte-kit/tsconfig.json",
	"include": ["svelte.config.js", "vite.config.ts", "src/**/*", ".svelte-kit/ambient.d.ts"],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"outDir": "./build",
		"types": ["vitest/globals"]
	}
}
